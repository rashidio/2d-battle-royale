{
    "name": "tgpubg-tests",
    "version": "1.0.0",
    "description": "Automated tests for PixiJS Battle Royale Game",
    "type": "module",
    "scripts": {
        "test": "playwright test",
        "test:headed": "playwright test --headed",
        "test:debug": "playwright test --debug",
        "test:ui": "playwright test --ui",
        "test:parallel": "playwright test --workers=4",
        "test:parallel8": "playwright test --workers=8",
        "test:parallel16": "playwright test --workers=16"
    },
    "devDependencies": {
        "@playwright/test": "^1.40.0"
    }
}